{
  "compilerOptions": {
    "module": "ESNext",
    "noImplicitAny": true,
    // "removeComments": false,
    "preserveConstEnums": true,
    // "sourceMap": true,
    "target": "ES2019",
    "importHelpers": false,
    "noEmitHelpers": true,
    "strict": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    // "allowJs": true,
    // "checkJs": false,
    "typeRoots": [
      "types",
      "node_modules/@types"
    ],
  },
  "include": [
    "src/**/*",
    "types/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "dist",
  ]
}